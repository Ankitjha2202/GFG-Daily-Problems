class Solution{
public:	
	// calculate the maximum sum with out adjacent
	int findMaxSum(int *arr, int n) {
	    if(n==0){
	        return 0;
	    }
	    if(n==1){
	        return arr[0];
	    }
	    if(n==2){
	        return max(arr[0],arr[1]);
	    }
	    vector<int> dp(n,0);
	    dp[0]=arr[0];
	    dp[1]=max(arr[0],arr[1]);
	    for(int i=2;i<n;i++){
	        dp[i]+=max(arr[i]+dp[i-2],dp[i-1]);
	    }
	    return max(dp[n-1],dp[n-2]);
	}
};
